<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  
  <h4>body</h4>
  <%= f.text_area :body %>
  
  <div class="btn">
    <%= f.submit 'Update Book', class: "btn" %>
  </div>
<% end %>

<div class="btn">
  <span class="btn-1"><%= link_to 'Show', book_path(@book.id) %></span>
  <%= link_to 'Back', books_path %>
</div>
